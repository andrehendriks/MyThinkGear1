<Window x:Class="MyThinkGear1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyThinkGear1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <Button x:Name="button_disconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="75" Click="button_disconnect_Click"/>
        <ProgressBar x:Name="progressBar" Margin="10,10,10,289" ValueChanged="ProgressBar_ValueChanged"/>
        <Button x:Name="button_connect" Content="Connect" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="button_connect_Click"/>

    </Grid>
</Window>
